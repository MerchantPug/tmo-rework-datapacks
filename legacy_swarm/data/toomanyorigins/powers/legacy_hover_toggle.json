{
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:if_else",
      "condition": {
        "type": "origins:power_active",
        "power": "*:hover_toggle_resource"
      },
      "if_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:toggle",
            "power": "*:hover_toggle_resource"
          },
          {
            "type": "toomanyorigins:resource_transfer",
            "resource": "*:hover_inactive_resource",
            "provider": "*:hover_active_resource"
          }
        ]
      },
      "else_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:toggle",
            "power": "*:hover_toggle_resource"
          },
          {
            "type": "toomanyorigins:resource_transfer",
            "resource": "*:hover_active_resource",
            "provider": "*:hover_inactive_resource"
          }
        ]
      }
    },
    "cooldown": 1,
    "hud_render": {
      "should_render": false
    },
    "key": {
      "key": "key.origins.primary_active"
    },
    "badges": [
      {
        "sprite": "origins:textures/gui/badge/toggle.png",
        "text": "origins.gui.badge.toggle"
      }
    ],
    "name": "Hover",
    "description": "Being made up of multiple bees, you are able to hover midair whenever you are falling."
}